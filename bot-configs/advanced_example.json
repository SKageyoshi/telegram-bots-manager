{
  "read_enabled": true,
  "write_enabled": true,
  "media_enabled": true,
  
  "keywords": [
    "palavra1",
    "palavra2",
    "termo importante"
  ],
  
  "regex_patterns": [
    "https?://[^\\s]+",
    "\\b\\d{10,}\\b",
    "spam|promoção|venda"
  ],
  
  "media_filters": [
    "MessageMediaPhoto",
    "MessageMediaDocument"
  ],
  
  "user_filters": {
    "blocked": [123456789, 987654321],
    "blocked_chats": [-1001234567890]
  },
  
  "replace_rules": [
    {
      "old": "termo antigo",
      "new": "termo novo"
    },
    {
      "old": "link antigo",
      "new": "link novo"
    }
  ],
  
  "link_replacements": {
    "https://site-antigo.com": "https://site-novo.com",
    "http://link-ruim.com": "https://link-bom.com"
  },
  
  "auto_reply": true,
  "auto_replies": [
    {
      "keywords": ["oi", "olá", "bom dia"],
      "responses": [
        "Olá! Como posso ajudar?",
        "Bom dia! Em que posso auxiliar?",
        "Oi! Tudo bem?"
      ]
    },
    {
      "keywords": ["ajuda", "help", "suporte"],
      "responses": [
        "Claro! Como posso ajudar?",
        "Estou aqui para auxiliar!",
        "O que você precisa?"
      ]
    }
  ],
  
  "delete_keywords": [
    "spam",
    "promoção",
    "venda",
    "compre agora"
  ],
  
  "monitor_chats": [
    -1001234567890,
    -1001234567891
  ],
  
  "clone_rules": [
    {
      "source_chat": -1001234567890,
      "target_chat": -1001234567891,
      "replacements": [
        {
          "old": "termo original",
          "new": "termo substituído"
        }
      ]
    }
  ],
  
  "member_management": {
    "add_members": false,
    "remove_members": false,
    "ban_users": false,
    "unban_users": false,
    "promote_admin": false,
    "demote_admin": false
  },
  
  "chat_management": {
    "create_groups": false,
    "create_channels": false,
    "delete_chats": false,
    "modify_settings": false
  },
  
  "streaming": {
    "enabled": true,
    "update_interval": 300,
    "replace_previous": true,
    "channels": [
      {
        "channel_id": -1001234567890,
        "content": "Conteúdo atualizado do streaming"
      }
    ]
  },
  
  "scheduled_messages": [
    {
      "chat_id": -1001234567890,
      "text": "Bom dia! Lembrete diário.",
      "time": "09:00",
      "active": true
    },
    {
      "chat_id": -1001234567890,
      "text": "Boa tarde! Atualização do dia.",
      "time": "15:00",
      "active": true
    },
    {
      "chat_id": -1001234567891,
      "text": "Mensagem a cada 2 horas",
      "interval_minutes": 120,
      "active": true
    }
  ],
  
  "filters": {
    "min_message_length": 1,
    "max_message_length": 4096,
    "allowed_languages": ["pt", "en"],
    "max_messages_per_hour": 50
  }
}
